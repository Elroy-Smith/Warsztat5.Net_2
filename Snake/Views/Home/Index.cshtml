@if (User.Identity.IsAuthenticated)
{
    <div class="text-info">Pomyslnie zalogowano!</div>
    <a class="btn btn-link" href="/Account/Logout">Logout</a>
}
else
{
    <div><a href="/Account/Login" class="btn btn-success">Login</a></div>
    <div><a href="/Account/Register" class="">Rejestracja</a></div>
}

@if (User.IsInRole("Admin"))
{
    <div>Panel Administratora</div>
}
else
{
    <div>Panel użytkownika</div>
}